rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Menu images - read access for everyone, write access for authenticated users only
    match /menu/{imageId} {
      allow read: if true;
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }
    
    // General images - read access for everyone, write access for authenticated users only
    match /images/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }
  }
}
