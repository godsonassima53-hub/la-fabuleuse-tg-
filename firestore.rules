rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Menu items - read access for everyone, write access for authenticated users only
    match /menu/{docId} {
      allow read: if true;
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }
    
    // Settings - read access for everyone, write access for authenticated users only
    match /settings/{docId} {
      allow read: if true;
      allow write: if request.auth != null;
      allow update: if request.auth != null;
    }
    
    // Orders collection (for future use) - restricted access
    match /orders/{docId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }
  }
}
